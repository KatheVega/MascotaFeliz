@page
@model MascotaFeliz.App.Frontend.Pages.ListaDuenosModel
@{
}

<a class = "btn btn-primary table-btn" asp-page="./EditarDuenos" class="btn-default">Agregar Dueño</a>
<table Id ='Tables' class="table" >
    <tr>
    
        <th>Nombres</th>
        <th>Apellidos</th>
        <th>Detalles<th>
        <th>Editar</th>
        <th>Modificar</th>
         <th>Eliminar</th>


    </tr>
    @foreach (var dueno in Model.listaDuenos)
    {
        <tr>

            <td>@dueno.Nombres</td>
            <td>@dueno.Apellidos</td>
        
            <td>
                <a class="btn btn-primary table-btn" asp-page="./DetallesDuenos" asp-route-duenoId="@dueno.Id">
                    
                    <i class="fa-solid fa-eye ms-1"></i>
                </a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./EditarDuenos" img src="./img/btnbuscar" asp-route-duenoId="@dueno.Id">

                    <i class="fa-solid fa-pencil ms-1"></i>
                </a>
            </td>
        </tr>
    }
</table>
<script>
$(document).ready( function () {
    $('#Tables').DataTable();
} );
</script>



